<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="top.littlefogcat.clickerx.model.entities.RecommendItem" />
    </data>


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        app:cardElevation="1dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="11dp"
            android:paddingRight="16dp"
            android:paddingBottom="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text='@{item.title}'
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="并夕夕签到并夕夕签到并夕夕?" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginRight="4dp"
                    app:imageUrl="@{item.author.avatar}"
                    tools:src="@drawable/ic_tab_message_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{item.author.username}"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    tools:text="牛毛" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="2"
                android:text="@{item.summary}"
                android:textColor="#333333"
                android:textSize="14sp"
                tools:text="并夕夕签到签到并夕夕签到并夕夕签到到并夕夕签到并夕夕签到并夕夕签到并夕夕签到" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text='@{item.votes+"点赞 · "+item.comments+"评论"}'
                android:textSize="14sp"
                tools:text="8319点赞 · 893评论" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
